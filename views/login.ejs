<%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/styleslogin.css">
</head>
<body>
    <%- include("./partials/header") %>
    <main>
        <form action="/user/login" method="POST" class="login">
            <h2>Inicia sesión</h2>
            <div class="form-login">
                <label for="">Nombre de usuario:</label>
                <input type="text" placeholder="Escribe tu nombre de usuario" name="username" 
                class="texto <%= locals.errores && errores.username ? 'is-invalid' : null %>"
                value="<%= locals.old && old.username ? old.username : '' %>">
                <% if(locals.errores && errores.username) { %>
                    <div class="text-danger">
                        <%= errores.username.msg %>
                    </div>
                <% } %>
            </div>
            <div class="form-login">
                <label for="">Contraseña:</label>
                <input type="password" placeholder="Escribe tu contraseña" name="password" 
                class="texto <%= locals.errores && errores.password ? 'is-invalid' : null %>">
                <% if(locals.errores && errores.password) { %>
                    <div class="text-danger">
                        <%= errores.password.msg %>
                    </div>
                <% } %>
            </div>
            <div class="form-login">                
                <label for=""><input type="checkbox" name="recordar">Recordar sesión</label>
            </div>
            <div class="form-login-button">
                <input type="submit" value="Entrar" class="button-login">
            </div>
            <p>¿No tienes una cuenta? <a href="/user/register">Registrate aquí</a></p>
        </form>
    </main>
    <%- include("./partials/footer") %>
</body>
</html>