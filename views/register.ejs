<%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/stylesregister.css">
</head>
<body>
    <%- include("./partials/header") %>
    <main>
        <form action="/user/register" method="POST" class="register">
            <h2>Registrate</h2>
            <div class="form-register">
                <label for="">Nombre y apellido:</label>
                <input type="text" name="name-register" placeholder="Ej. José Guevara" class="texto" 
                maxlength="30" minlength="10" required>
            </div>
            <div class="form-register">
                <label for="">Correo electrónico:</label>
                <input type="email" name="email-register" placeholder="Ej. Jose@Guevara.com" class="texto"
                minlength="10" required>
            </div>
            <div class="form-register">
                <label for="">Nombre de usuario:</label>
                <input type="text" name="username-register" placeholder="Ej. Bipooh" class="texto"
                minlength="5" maxlength="30">
            </div>
            <div class="form-register">
                <label for="">Selecciona tu fecha de nacimiento:</label>
                <input type="date" name="date-register" required value="1999-30-11" class="texto">
            </div>
            <div class="form-register">
                <label>Selecciona tus categorias de interes:</label>
                <label>
                    <input type="checkbox" name="category-register" value="hombre" checked>
                    Para hombres
                </label>
                <label for="category-register">
                    <input type="checkbox" name="category-register" value="mujer">
                    Para mujeres
                </label>
                <label for="category-register">
                    <input type="checkbox" name="category-register" value="niños">
                    Para niños
                </label>
                <label for="category-register">
                    <input type="checkbox" name="category-register" value="zapatos">
                    Zapatos                    
                </label>
                <label for="category-register">
                    <input type="checkbox" name="category-register" value="ropa">
                    Bolsos                    
                </label>
                <label for="category-register">
                    <input type="checkbox" name="category-register" value="accesorios">
                    Accesorios
                </label>
                <label for="category-register">
                    <input type="checkbox" name="category-register" value="ofertas">
                    Ofertas especiales
                </label>
            </div>
            <div class="form-register">
                <label for="">Escribe tu contraseña:</label>
                <input type="password" name="password-register" placeholder="Contraseña" class="texto"
                required minlength="8" maxlength="30">
            </div>
            <div class="form-register">
                <label for="">Repite tu contraseña:</label>
                <input type="password" name="password-confirm" placeholder="Repite tu contraseña" class="texto"
                required minlength="8" maxlength="30">
            </div>
            <div class="form-register-button">
                <input type="submit" value="Enviar" class="button-register">
            </div>
            <p>¿Ya tienes una cuenta? <a href="/user/login">Inicia sesión</a></p>
        </form>
    </main>
    <%- include("./partials/footer") %>
</body>
</html>