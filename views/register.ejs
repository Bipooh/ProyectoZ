<%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/stylesregister.css">
</head>
<body>
    <%- include("./partials/header") %>
    <main>
        <form action="/user/register" method="POST" class="register">
            <h2>Registrate</h2>
            <div class="form-register">
                <label for="">Nombre y apellido:</label>
                <input type="text" name="name" placeholder="Ej. José Guevara" 
                class="texto <%= locals.errores && errores.name ? 'is-invalid' : null %>"
                value="<%= locals.old && old.name ? old.name : ''%>">
                <% if(locals.errores && errores.name) { %>
                    <div class="text-danger">
                        <%= errores.name.msg %>
                    </div>
                <% } %>
            </div>
            <div class="form-register">
                <label for="">Correo electrónico:</label>
                <input type="text" name="email" placeholder="Ej. Jose@Guevara.com" 
                class="texto <%= locals.errores && errores.email ? 'is-invalid' : null %>"
                value="<%= locals.old && old.email ? old.email : ''%>">
                <% if(locals.errores && errores.email) { %>
                    <div class="text-danger">
                        <%= errores.email.msg %>
                    </div>
                <% } %>
            </div>
            <div class="form-register">
                <label for="">Nombre de usuario:</label>
                <input type="text" name="username" placeholder="Ej. Bipooh" 
                class="texto <%= locals.errores && errores.username ? 'is-invalid' : null %>"
                value="<%= locals.old && old.username ? old.username : ''%>">
                <% if(locals.errores && errores.username) { %>
                    <div class="text-danger">
                        <%= errores.username.msg %>
                    </div>
                <% } %>
            </div>
            <div class="form-register">
                <label for="">Selecciona tu fecha de nacimiento:</label>
                <input type="date" name="date-register" value="1999-30-11" class="texto">
            </div>
            <div class="form-register">
                <label>Selecciona tus categorias de interes:</label>
                <label>
                    <input type="radio" name="category" value="hombre" checked>
                    Para hombres
                </label>
                <label for="category-register">
                    <input type="radio" name="category" value="mujer">
                    Para mujeres
                </label>
                <label for="category-register">
                    <input type="radio" name="category" value="niños">
                    Para niños
                </label>
                <label for="category-register">
                    <input type="radio" name="category" value="zapatos">
                    Zapatos                    
                </label>
                <label for="category-register">
                    <input type="radio" name="category" value="ropa">
                    Bolsos                    
                </label>
                <label for="category-register">
                    <input type="radio" name="category" value="accesorios">
                    Accesorios
                </label>
                <label for="category-register">
                    <input type="radio" name="category" value="ofertas">
                    Ofertas especiales
                </label>
            </div>
            <div class="form-register">
                <label for="">Foto de perfil:</label>
                <input type="file" name="image" accept=".jpg">
            </div>
            <div class="form-register">
                <label for="">Escribe tu contraseña:</label>
                <input type="password" name="password" placeholder="Contraseña" 
                class="texto <%= locals.errores && errores.password ? 'is-invalid' : null %>">
                <% if(locals.errores && errores.password) { %>
                    <div class="text-danger">
                        <%= errores.password.msg %>
                    </div>
                <% } %>
            </div>
            <div class="form-register-button">
                <input type="submit" value="Enviar" class="button-register">
            </div>
            <p>¿Ya tienes una cuenta? <a href="/user/login">Inicia sesión</a></p>
        </form>
    </main>
    <%- include("./partials/footer") %>
</body>
</html>