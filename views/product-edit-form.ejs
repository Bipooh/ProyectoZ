<%- include("./partials/head") %>
    <link rel="stylesheet" href="/css/stylesregister.css">
</head>
<body>
    <%- include("./partials/header") %>
    <main>
        <form action="/product/detail?_method=PUT" method="POST" class="register">
            <h2>Editar producto</h2>
            <div class="form-register">
                <label for="">Nombre del producto:</label>
                <input type="text" name="nameproduct" placeholder="Ej. Air Max 97" class="texto" required>
            </div>
            <div class="form-register">
                <label for="">Marca del producto:</label>
                <input type="text" name="marcaproduct" placeholder="Ej. Nike, Adidas..." class="texto" required>
            </div>
            <div class="form-register">
                <label for="">Foto del producto:</label>
                <input type="file" name="imgproduct" accept=".jpg" required>
            </div>
            <div class="form-register">
                <label for="">Precio del producto:</label>
                <input type="number" name="priceproduct" placeholder="Ej. 90.00" class="texto" required>
            </div>
            <div class="form-register">
                <label>Selecciona la categoria:</label>
                <label>
                    <input type="radio" name="categoryproduct" value="zapatos" checked>
                    Zapatos
                </label>
                <label for="category-register">
                    <input type="radio" name="categoryproduct" value="bolsos">
                    Bolsos
                </label>
                <label for="category-register">
                    <input type="radio" name="categoryproduct" value="accesorios">
                    Accesorios
                </label>
                <label for="category-register">
                    <input type="radio" name="categoryproduct" value="ropa">
                    Ropa
                </label>
            </div>
            <div class="form-register">
                <label>Descripción del producto:</label><br>
                <label>Tallas disponibles:</label>
                <label>
                    <input type="checkbox" name="tallaproduct" value="niños" checked>
                    Niños
                </label>
                <label>
                    <input type="checkbox" name="tallaproduct" value="niñas">
                    Niñas
                </label>
                <label for="category-register">
                    <input type="checkbox" name="tallaproduct" value="hombres">
                    Hombres
                </label>
                <label for="category-register">
                    <input type="checkbox" name="tallaproduct" value="mujeres">
                    Mujeres
                </label>
            </div>
            <div class="form-register">
                <label>Colores disponibles:</label>
                <label>
                    <input type="checkbox" name="colorproduct" value="negro" checked>
                    Negro
                </label>
                <label>
                    <input type="checkbox" name="colorproduct" value="blanco">
                    Blanco
                </label>
                <label for="category-register">
                    <input type="checkbox" name="colorproduct" value="otro">
                    Otro
                </label>
                <label for="category-register">
                    <input type="checkbox" name="colorproduct" value="variado">
                    Variado
                </label>
            </div>
            <div class="form-register">
                <label for="">Cantidad del producto:</label>
                <input type="number" name="stockproduct" placeholder="Ej. 10" class="texto" required>
            </div>
            <div class="form-register-button">
                <input type="submit" value="Publicar" class="button-register">
            </div>
        </form>
    </main>
    <%- include("./partials/footer") %>
</body>
</html>